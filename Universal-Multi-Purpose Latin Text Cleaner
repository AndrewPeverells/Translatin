    "uel",
    "uero",
    "unus",
    "ut",
]

def removeStopwords(clean_text, stopwords):
    return [w for w in clean_text if w not in stopwords]

clean_text_no_sw = removeStopwords(clean_text, stopwords)
print(clean_text_no_sw)
